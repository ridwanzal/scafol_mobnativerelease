<?xml version="1.0" encoding="utf-8"?>
    <!-- START*** Root Container *** -->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_paketid"
        android:clickable="true"
        android:orientation="vertical"
    >

    <RelativeLayout
        android:id="@+id/cont_paket"
        android:background="?android:attr/selectableItemBackground"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt_pagu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="5dp"
            android:layout_below="@id/txt_nama_paket"
            android:text="" />

        <TextView
            android:id="@+id/txt_nama_paket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:textColor="#000"
            android:text="Ini contoh list"
            android:textStyle=""
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txt_pajenis"
            android:layout_toRightOf="@id/txt_pagu"
            android:layout_below="@id/txt_nama_paket"
            android:layout_width="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="5dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:textAlignment="viewEnd"
            android:textColor="#bbb"
            android:layout_height="wrap_content"
            android:text="" />

        <TextView
            android:id="@+id/txt_pajenis"
            android:layout_toRightOf="@id/txt_pagu"
            android:layout_below="@id/txt_nama_paket"
            android:layout_width="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="5dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:textAlignment="viewEnd"
            android:textColor="#bbb"
            android:layout_height="wrap_content"
            android:text="" />

        <TextView
            android:id="@+id/txt_idpaket"
            android:visibility="invisible"
            android:layout_toRightOf="@id/txt_nama_paket"
            android:layout_width="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:textAlignment="viewEnd"
            android:textColor="#bbb"
            android:layout_height="wrap_content"
            android:text="" />

        <TextView
            android:id="@+id/tx_jenispaket"
            android:layout_width="match_parent"
            android:layout_toRightOf="@+id/txt_nama_paket"
            android:textColor="#bbb"
            android:layout_alignParentRight="true"
            android:textAlignment="viewEnd"
            android:gravity="end"
            android:layout_height="wrap_content"
            android:text="" />


    </RelativeLayout>
    <!-- TextView Employee Name -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/kegiatan_id"
            android:layout_width="wrap_content"
            android:text="Kegiatan ID"
            android:visibility="invisible"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View android:background="#eee"
        android:layout_below="@id/cont_paket"
        android:layout_width = "match_parent"
        android:layout_height="1dp"/>
</RelativeLayout>

    <!-- END*** Root Container *** -->