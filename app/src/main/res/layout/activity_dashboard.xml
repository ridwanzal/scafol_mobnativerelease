    <HorizontalScrollView
        android:layout_width="match_parent"
        android:fadeScrollbars="true"
        android:scrollbars="none"
        android:scrollbarAlwaysDrawHorizontalTrack="false"
        android:layout_height="match_parent"
        android:layout_below="@id/btn_tolist2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingTop="15dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="15dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:text="Total Paket Fisik"
                        android:textColor="#aaa" />

                    <TextView
                        android:id="@+id/tx_dashtotalpaket"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:text=". . . "
                        android:textColor="#444"
                        android:drawablePadding="5dp"
                        android:drawableLeft="@drawable/data_usage_blue"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingRight="15dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:text="Paket yang dikerjakan"
                        android:textColor="#aaa" />

                    <TextView
                        android:id="@+id/tx_dsahongoing"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:text=". . . "
                        android:drawablePadding="5dp"
                        android:drawableLeft="@drawable/data_usage_green"
                        android:textColor="#444"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingTop="15dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:text="Paket Belum Mulai"
                        android:textColor="#aaa" />

                    <TextView
                        android:id="@+id/tx_dashpaketbelum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:text=". . . "
                        android:drawablePadding="5dp"
                        android:drawableLeft="@drawable/data_usage_gray"
                        android:textColor="#444"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingTop="15dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:text="Paket Selesai"
                        android:textColor="#aaa" />

                    <TextView
                        android:id="@+id/tx_dashpaketselesai"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:text=". . . "
                        android:drawablePadding="5dp"
                        android:drawableLeft="@drawable/data_usage_orange"
                        android:textColor="#444"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingTop="15dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:text="Total Paket Non Fisik"
                        android:textColor="#aaa" />

                    <TextView
                        android:id="@+id/tx_dashtotalpaket_nonfisik"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="20dp"
                        android:drawablePadding="5dp"
                        android:drawableLeft="@drawable/data_usage"
                        android:layout_weight="1"
                        android:textColor="#444"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </HorizontalScrollView>

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_marginTop="3dp"
    android:id="@+id/rel_bottomdash"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <Button
        android:id="@+id/btn_mapdash"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#555"
        android:clickable="true"
        android:paddingRight="10dp"
        android:paddingLeft="15dp"
        android:drawableLeft="@drawable/maps"
        android:textStyle="normal"
        android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"
        android:background="@drawable/button_ripple_white"
        android:drawablePadding="10dp"
        android:textAlignment="viewStart"
        android:text="Lihat Map" />

    <Button
        android:id="@+id/btn_chartdash"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_mapdash"
        android:textColor="#555"
        android:layout_marginTop="-2dp"
        android:clickable="true"
        android:paddingRight="10dp"
        android:paddingLeft="15dp"
        android:drawableLeft="@drawable/chart"
        android:textStyle="normal"
        android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"
        android:background="@drawable/button_ripple_white"
        android:drawablePadding="10dp"
        android:textAlignment="viewStart"
        android:visibility="gone"
        android:text="Lihat Grafik Realisasi" />

    <Button
        android:id="@+id/btn_tolist"
        android:layout_below="@id/btn_chartdash"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#555"
        android:clickable="true"
        android:paddingRight="10dp"
        android:textAlignment="viewStart"
        android:layout_marginTop="-2dp"
        android:paddingLeft="15dp"
        android:textStyle="normal"
        android:drawablePadding="10dp"
        android:drawableLeft="@drawable/paket_fisik"
        android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"
        android:background="@drawable/button_ripple_generals"
        android:text="Lihat Semua Paket Fisik" />

    <Button
        android:id="@+id/btn_tolist2"
        android:visibility="visible"
        android:layout_width="fill_parent"
        android:layout_below="@+id/btn_tolist"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:paddingRight="10dp"
        android:textColor="#555"
        android:paddingLeft="15dp"
        android:layout_marginTop="-2dp"
        android:drawablePadding="10dp"
        android:drawableLeft="@drawable/paket_nonfisik"
        android:textAlignment="viewStart"
