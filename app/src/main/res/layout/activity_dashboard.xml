        android:layout_width="match_parent"
        android:layout_gravity="left"
        app:cardCornerRadius="2dp"
        android:layout_marginTop="-5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="81dp">
