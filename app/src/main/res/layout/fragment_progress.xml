<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ProgressBar
            android:id="@+id/loading_progress_submit"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:visibility="gone"
            android:layout_height="30dp" />
        <LinearLayout
            android:id="@+id/labelis"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Progres Fisik"
                android:paddingLeft="10dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textColor="#aaa" />

            <TextView
                android:id="@+id/pr_fisik_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Lihat Daftar Progres"
                android:paddingLeft="5dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textAlignment="textEnd"
                android:textColor="#4a9ed6" />

        </LinearLayout>


        <androidx.cardview.widget.CardView
            android:id="@+id/card1x"
            android:layout_below="@id/labelis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingLeft="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="0dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Target (%)"
                        android:textColor="#aaa" />

                    <EditText
                        android:id="@+id/prog_target_fisik"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_weight="1"
                        android:inputType="numberDecimal"
                        android:padding="10dp"
                        android:background="@drawable/edittextborder_generic"
                        android:text=""
                        android:textColor="#000"
                        android:textSize="16sp"
                        android:textStyle="" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Realisasi (%)"
                        android:textColor="#aaa" />

                    <EditText
                        android:id="@+id/prog_real_fisik"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_weight="1"
                        android:text=""
                        android:inputType="numberDecimal"
                        android:padding="10dp"
                        android:background="@drawable/edittextborder_generic"
                        android:textColor="#000"
                        android:textSize="16sp"
                        android:textStyle="" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:orientation="vertical" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Deviasi"
                                android:layout_marginTop="5dp"
                                android:textColor="#aaa"
                                />

                            <EditText
                                android:id="@+id/prog_deviasi_fisik"
                                android:layout_marginTop="7dp"
                                android:layout_width="match_parent"
                                android:editable="false"
                                android:layout_height="wrap_content"
                                android:background="@drawable/edittextborder_generic"
                                android:text=""
                                android:inputType="numberDecimal"
                                android:padding="10dp"
                                android:layout_marginRight="5dp"
                                android:textSize="15sp"/>

                        </LinearLayout>

                        <ImageView
                            android:id="@+id/get_deviasi"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/button_date_ripple"
                            android:tint="@color/colorwhite"
                            android:padding="10dp"
                            android:layout_gravity="bottom"
                            android:src="@drawable/ic_refresh_black_24dp"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:orientation="vertical" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tanggal Progres"
                                android:textColor="#aaa"
                                android:layout_marginTop="5dp"
                                />

                            <EditText
                                android:id="@+id/tx_tanggalprogress"
                                android:layout_marginTop="7dp"
                                android:layout_width="match_parent"
                                android:editable="false"
                                android:layout_height="wrap_content"
                                android:background="@drawable/edittextborder_generic"
                                android:text=""
                                android:padding="10dp"
                                android:layout_marginRight="5dp"
                                android:textSize="15sp"/>

                        </LinearLayout>

                        <ImageView
                            android:id="@+id/date_progresfisik"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/button_date_ripple"
                            android:tint="@color/colorwhite"
                            android:padding="10dp"
                            android:layout_gravity="bottom"
                            android:src="@drawable/baseline_date_range_black_24dp"
                            />
                    </LinearLayout>

                    <Button
                        android:id="@+id/btn_submit_progresfisik"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:background="@drawable/button_ripple_generals"
                        android:text="Tambah Progres Fisik"/>
                </LinearLayout>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>
        <RelativeLayout
            android:layout_marginTop="30dp"
            android:layout_below="@id/card1x"
            android:layout_width="wrap_content"
            android:visibility="gone"
            android:id="@+id/relx1"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Progres Keuangan"
                    android:padding="5dp"
                    android:id="@+id/tx_progressfisik"
                    android:textColor="#aaa" />

                <TextView
                    android:id="@+id/pr_keuangan_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Lihat Daftar Progres"
                    android:padding="5dp"
                    android:textAlignment="textEnd"
                    android:textColor="#4a9ed6" />

            </LinearLayout>

        </RelativeLayout>
        <androidx.cardview.widget.CardView
            android:layout_margin="7dp"
            android:visibility="gone"
            android:id="@+id/card2x"
            android:layout_below="@+id/relx1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="0dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Daya Serap Kontrak"
                        android:textColor="#aaa" />

                    <EditText
                        android:id="@+id/prog_dayaserap"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="4dp"
                        android:text=""
                        android:textSize="16sp"
                        android:textColor="#000"
                        android:padding="10dp"
                        android:background="@drawable/edittextborder_generic"
                        android:textStyle="" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Pagu"
                        android:textColor="#aaa" />

                    <EditText
                        android:id="@+id/prog_pagu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="4dp"
                        android:text=""
                        android:textSize="16sp"
                        android:padding="10dp"
                        android:background="@drawable/edittextborder_generic"
                        android:textColor="#000"
                        android:textStyle="" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Nilai Kontrak"
                        android:textColor="#aaa" />

                    <EditText
                        android:id="@+id/prog_kontrak"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="4dp"
                        android:text=""
                        android:textSize="16sp"
                        android:padding="10dp"
                        android:background="@drawable/edittextborder_generic"
                        android:textColor="#000"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Sisa Kontrak"
                        android:textColor="#aaa" />

                    <EditText
                        android:id="@+id/prog_sisa"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=""
                        android:padding="10dp"
                        android:background="@drawable/edittextborder_generic"
                        android:textSize="16sp"
                        android:layout_marginTop="4dp"
                        android:textColor="#000"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Sisa Anggaran"
                        android:textColor="#aaa" />

                    <EditText
                        android:id="@+id/prog_sisang"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:background="@drawable/edittextborder_generic"
                        android:text=""
                        android:textSize="16sp"
                        android:layout_marginTop="4dp"
                        android:textColor="#000"
                        />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:orientation="vertical" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tanggal Progres"
                                android:layout_marginTop="8dp"
                                android:textColor="#aaa"
                                />

                            <EditText
                                android:id="@+id/text_akhirkontrak"
                                android:layout_marginTop="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/edittextborder_generic"
                                android:text=""
                                android:padding="10dp"
                                android:layout_marginRight="5dp"
                                android:textSize="15sp"/>

                        </LinearLayout>

                        <ImageView
                            android:id="@+id/btn_date_akhir"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/button_date_ripple"
                            android:tint="@color/colorwhite"
                            android:padding="10dp"
                            android:layout_gravity="bottom"
                            android:src="@drawable/baseline_date_range_black_24dp"
                            android:contentDescription="@string/date_range" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Keterangan"
                        android:textColor="#aaa" />

                    <EditText
                        android:id="@+id/prog_keterangans"
                        android:layout_width="match_parent"
                        android:padding="10dp"
                        android:background="@drawable/edittextborder_generic"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=""
                        android:textSize="16sp"
                        android:layout_marginTop="4dp"
                        android:textColor="#000"
                        />

                    <Button
                        android:id="@+id/btns"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:background="@drawable/button_ripple"
                        android:text="Tambah Progres Keuangan"/>
                </LinearLayout>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_below="@id/card2x"
            android:id="@+id/labelisx"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Catatan"
                android:paddingLeft="10dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textColor="#aaa" />

            <TextView
                android:id="@+id/pr_catatan_fisik"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Lihat Daftar Catatan"
                android:paddingLeft="5dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textAlignment="textEnd"
                android:textColor="#4a9ed6" />

        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/labelisx"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="0dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Isi Catatan"
                    android:textColor="#aaa" />

                <EditText
                    android:id="@+id/textcatatans"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="4dp"
                    android:text=""
                    android:gravity="top|left"
                    android:maxLines="10"
                    android:lines="5"
                    android:minLines="3"
                    android:inputType="textMultiLine"
                    android:textSize="16sp"
                    android:textColor="#000"
                    android:padding="10dp"
                    android:background="@drawable/edittextborder_generic"
                    android:textStyle="" />
                <Button
                    android:id="@+id/btn_submit_catatan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:background="@drawable/button_ripple_generals"
                    android:text="Tambah Catatan"/>
                </LinearLayout>
            </RelativeLayout>



        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</ScrollView>
