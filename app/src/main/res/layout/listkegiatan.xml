<?xml version="1.0" encoding="utf-8"?>
    <!-- START*** Root Container *** -->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <!-- TextView Employee Name -->

    <TextView
        android:id="@+id/txt_rekening"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@id/txt_nama_kegiatan"
        android:text="TextView" />

    <TextView
        android:id="@+id/txt_nama_kegiatan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:text="Ini contoh list"
        android:textStyle="bold"
        android:textSize="16sp" />

    <View android:background="#eee"
        android:layout_width = "match_parent"
        android:layout_marginTop="15dp"
        android:layout_below="@id/txt_rekening"
        android:layout_height="1dp"/>
</RelativeLayout>

    <!-- END*** Root Container *** -->