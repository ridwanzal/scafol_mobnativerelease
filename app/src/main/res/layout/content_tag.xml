<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".dropbox.ActivityTag"
    android:background="#000"
    tools:showIn="@layout/activity_tag">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/img"
        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/ov1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_below="@+id/ov1"
                android:text=""
                android:textColor="#ffc92a"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="470dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/latlang"
                />
            <TextView
                android:layout_below="@+id/latlang"
                android:text=""
                android:layout_marginTop="5dp"
                android:textColor="#ffc92a"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/latlang2"
                />
        </RelativeLayout>

    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/camera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/img"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:paddingLeft="30dp"
            android:drawableLeft="@drawable/drawright_camera"
            android:background="@drawable/button_ripple_generals"
            android:layout_marginBottom="-1dp"
            android:src="@drawable/common_full_open_on_phone"
            android:text="Camera" />

        <Button

            android:layout_below="@id/camera"
            android:id="@+id/cme"
            android:layout_margin="2dp"
            android:paddingLeft="30dp"
            android:drawableLeft="@drawable/ic_save_black_24dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_ripple_generals"
            android:text="Save"
            />
    </LinearLayout>
    />

</RelativeLayout>