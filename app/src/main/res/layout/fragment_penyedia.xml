<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout
        android:id="@+id/lin_keu1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_infokontrak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:text="Nomor kontrak belum diisi, harap isi terlebih dahulu di halaman Edit Kontrak"
            android:drawableLeft="@drawable/ic_info_outline_black_24dp"
            android:drawableTint="@color/colorAccent"
            android:background="@drawable/button_ripple_white"
            android:padding="10dp"
            android:drawablePadding="7dp"
            android:textColor="#ff0000" />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/lin_penyedia"
        android:visibility="visible"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_below="@id/lin_keu1"
        android:layout_height="wrap_content">

        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tuliskan Nama Penyedia Jasa"
            android:textSize="16sp"
            android:paddingTop="10dp"
            android:drawableRight="@drawable/ic_close_black_24dp"
            android:paddingBottom="10dp"
            android:id="@+id/auto_listpenyedia"/>

        <Button
            android:id="@+id/submit_kontraktor_paket"
            android:layout_below="@id/auto_listpenyedia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_ripple_radius"
            android:text="Tambah Penyedia Jasa"
            android:layout_marginBottom="10dp"
            />

        <androidx.cardview.widget.CardView
            android:layout_margin="1dp"
            android:layout_below="@id/submit_kontraktor_paket"
            android:id="@+id/card1"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="0dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Nama Perusahaan"
                        android:textColor="#aaa" />

                    <TextView
                        android:id="@+id/text_judul"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_weight="1"
                        android:text="-"
                        android:drawableRight="@drawable/ic_check_circle_black_24dp"
                        android:drawablePadding="10dp"
                        android:textColor="#000"
                        android:textSize="16sp"
                        android:textStyle="" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="8dp"
                        android:visibility="gone"
                        android:layout_marginBottom="8dp"
                        android:background="#eee" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:visibility="gone"
                        android:text="Nama Pimpinan"
                        android:textColor="#aaa" />

                    <TextView
                        android:id="@+id/text_jenis"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="4dp"
                        android:text="-"
                        android:visibility="gone"
                        android:textSize="16sp"
                        android:textColor="#000"
                        android:textStyle="" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:visibility="gone"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:background="#eee" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:visibility="gone"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Jenis Perusahaan"
                        android:textColor="#aaa" />

                    <TextView
                        android:id="@+id/text_tahun"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:visibility="gone"
                        android:layout_marginTop="4dp"
                        android:text="-"
                        android:textSize="16sp"
                        android:textColor="#000"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="8dp"
                        android:visibility="gone"
                        android:layout_marginBottom="8dp"
                        android:background="#eee" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:visibility="gone"
                        android:text="Alamat"
                        android:textColor="#aaa" />

                    <TextView
                        android:id="@+id/text_pagu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="-"
                        android:textSize="16sp"
                        android:visibility="gone"
                        android:layout_marginTop="4dp"
                        android:textColor="#000"
                        />
                </LinearLayout>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>
</RelativeLayout>
