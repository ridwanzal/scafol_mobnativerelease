<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:scrollbarAlwaysDrawVerticalTrack="true"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/linhahah"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/dump_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:visibility="gone"
            android:src="@drawable/ic_info_outline_black_24dp"
            />
        <TextView
            android:id="@+id/notfoundfile"
            android:layout_above="@+id/frame_layoutfile"
            android:layout_width="match_parent"
            android:text="No item found"
            android:layout_gravity="center"
            android:visibility="gone"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_height="30dp"
            />
        <TextView
            android:id="@+id/paket_name_oflistfiles"
            android:background="#69B578"
            android:paddingLeft="15dp"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:paddingRight="10dp"
            android:layout_above="@+id/frame_layoutfile"
            android:layout_width="match_parent"
            android:text="No item found"
            android:layout_gravity="center"
            android:visibility="gone"
            android:textColor="#fff"
            android:gravity="center"
            android:layout_height="30dp"
            />
    </LinearLayout>
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:id="@+id/frame_layoutfile"
        android:background="#fff"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">
        <RelativeLayout
            android:id="@+id/linhahah2"
            android:visibility="gone"
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:foregroundGravity="center_vertical"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:background="#ffffff"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/empty"
                />
            <TextView
                android:layout_below="@id/imageView"
                android:textColor="#aaa"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:text="No Data found"
                android:gravity="center"
                />
        </RelativeLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/files_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <Button
            android:background="@drawable/button_ripple_generals"
            android:id="@+id/fab"
            android:layout_width="100dp"
            android:textSize="11sp"
            android:visibility="visible"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:clickable="true"
            android:paddingLeft="10dp"
            android:text="File"
            android:paddingRight="10dp"
            android:drawableRight="@drawable/drawright_file"
            android:layout_gravity="bottom|right"
            />
        <Button
            android:background="@drawable/button_ripple_generals"
            android:id="@+id/fab3"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:clickable="true"
            android:text="Tag"
            android:textSize="11sp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:drawableRight="@drawable/drawright_camera"
            android:layout_gravity="bottom|center"
            />
        <Button
            android:background="@drawable/button_ripple_generals"
            android:id="@+id/fab2"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_margin="16dp"
            android:clickable="true"
            android:text="Kamera"
            android:textSize="11sp"
            android:layout_gravity="bottom|left"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/drawright_camera"
            />
    </FrameLayout>
</RelativeLayout>
