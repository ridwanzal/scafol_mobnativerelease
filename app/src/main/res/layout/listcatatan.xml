<?xml version="1.0" encoding="utf-8"?>
<!-- START*** Root Container *** -->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/layout_paketid"
    android:clickable="true"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:id="@+id/cont_paket"
        android:background="?android:attr/selectableItemBackground"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/ca_ca_catatan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:textColor="#444"
            android:text="Ini contoh list"
            android:textStyle="bold"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/ca_date_created"
            android:layout_below="@id/ca_ca_catatan"
            android:layout_width="match_parent"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="5dp"
            android:layout_alignParentRight="true"
            android:textAlignment="viewStart"
            android:textColor="#bbb"
            android:layout_height="wrap_content"
            android:text="" />

    </RelativeLayout>
    <!-- TextView Employee Name -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/kegiatan_id"
            android:layout_width="wrap_content"
            android:text="Kegiatan ID"
            android:visibility="invisible"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View android:background="#eee"
        android:layout_below="@id/cont_paket"
        android:layout_width = "match_parent"
        android:layout_height="1dp"/>
</RelativeLayout>

    <!-- END*** Root Container *** -->