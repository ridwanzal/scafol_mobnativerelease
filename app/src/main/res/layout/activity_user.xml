<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".dropbox.UserActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <ProgressBar
            android:id="@+id/progress_bardropboxuseract"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/centang_ok"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:layout_width="210dp"
            android:layout_height="210dp"
            android:visibility="gone"
            android:layout_gravity="center"
            android:src="@drawable/ic_check_circle_black_24dp"
            />

        <TextView
            android:id="@+id/sync_status_con"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sync Status Connected"
            android:paddingTop="10dp"
            android:textAlignment="center"
            android:visibility="gone"
            android:textStyle="bold"
            android:textColor="#69B578"
            android:paddingBottom="10dp"
            />

        <TextView
            android:id="@+id/sync_status_condc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sync Status Disconnected"
            android:paddingTop="10dp"
            android:textAlignment="center"
            android:visibility="gone"
            android:textColor="#CD4E32"
            android:textStyle="bold"
            android:paddingBottom="10dp"
            />


        <Button
            android:visibility="gone"
            android:layout_marginTop="40dp"
            style="@style/ButtonStyle"
            android:id="@+id/files_button"
            android:layout_width="match_parent"
            android:background="@drawable/button_ripple"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:text="Lihat Berkas"/>

        <Button
            style="@style/ButtonStyle"
            android:id="@+id/login_button"
            android:text="Login with Dropbox"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/email_text"
            android:visibility="gone"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="wrap_content"
            android:background="#ccc"
            android:visibility="gone"
            android:layout_height="1dp">
        </View>

        <TextView
            android:id="@+id/name_text"
            android:paddingTop="10dp"
            android:visibility="gone"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="wrap_content"
            android:background="#ccc"
            android:visibility="gone"
            android:layout_height="1dp">
        </View>



        <TextView
            android:id="@+id/type_text"
            android:paddingTop="10dp"
            android:visibility="gone"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <Button
            style="@style/ButtonStyle"
            android:id="@+id/open_with"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test Open With (Internal)"/>

    </LinearLayout>
</LinearLayout>
