<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:background="#eee"
        android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/submit_profile"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:paddingRight="10dp"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:paddingLeft="10dp"
                android:text="Simpan"
                ></TextView>
        <LinearLayout
            android:id="@+id/linarz"
            android:layout_marginBottom="10dp"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/prof_namas_edited"
                android:layout_below="@id/imagelogo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:textAlignment="center"
                android:layout_centerInParent="true"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="21dp"
                android:text=". . ."
                />
            <ImageView
                android:layout_below="@id/imagelogo"
                android:layout_width="20dp"
                android:layout_toRightOf="@id/prof_namas"
                android:layout_height="20dp"
                android:visibility="gone"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_create_black_24dp"
                />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_below="@id/linarz"
            android:id="@+id/card1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="FullName"
                        android:textColor="#aaa" />

                    <EditText
                        android:id="@+id/prof_namas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:padding="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/edittext_generic"
                        android:textSize="16sp"
                        android:textStyle="normal" />

                    <View
                        android:layout_width="match_parent"
                        android:background="#fff"
                        android:layout_marginTop="10dp"
                        android:visibility="gone"
                        android:layout_marginBottom="10dp"
                        android:layout_height="1dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Email"
                        android:visibility="gone"
                        android:textColor="#aaa" />

                    <EditText
                        android:id="@+id/prof_email_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_weight="1"
                        android:visibility="gone"
                        android:background="@drawable/edittext_generic"
                        android:textSize="16sp"
                        android:padding="5dp"
                        android:textStyle="normal" />

                    <View
                        android:layout_width="match_parent"
                        android:background="#fff"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_height="1dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Telepon"
                        android:textColor="#aaa" />

                    <EditText
                        android:id="@+id/prof_telepon_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_weight="1"
                        android:background="@drawable/edittext_generic"
                        android:textSize="16sp"
                        android:padding="5dp"
                        android:textStyle="normal" />

                    <View
                        android:layout_width="match_parent"
                        android:background="#fff"
                        android:visibility="gone"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_height="1dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:visibility="gone"
                        android:text="Role"
                        android:textColor="#aaa" />

                    <EditText
                        android:id="@+id/prof_role"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_marginTop="4dp"
                        android:layout_weight="1"
                        android:background="@drawable/edittext_generic"
                        android:textSize="16sp"
                        android:padding="5dp"
                        android:textStyle="normal" />


                    <View
                        android:layout_width="match_parent"
                        android:background="#fff"
                        android:layout_marginTop="10dp"
                        android:visibility="gone"
                        android:layout_marginBottom="10dp"
                        android:layout_height="1dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Instansi"
                        android:visibility="gone"
                        android:textColor="#aaa" />

                    <TextView
                        android:id="@+id/prof_dinas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_weight="1"
                        android:paddingBottom="10dp"
                        android:visibility="gone"
                        android:textSize="16sp"
                        android:textStyle="normal" />

                    <Button
                        android:id="@+id/btn_simpan"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:textColor="#000000"
                        android:clickable="true"
                        android:visibility="gone"
                        android:background="@drawable/button_ripple_generals"
                        android:text="Simpan" />

                </LinearLayout>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>


    </RelativeLayout>
</ScrollView>